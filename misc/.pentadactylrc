" Kelly Stewart pentadactylrc   -*-mode: outline-minor-mode-*-

" * Appearance
" ** General
colorscheme solarized-dark
set titlestring="Probably not work"
" show tab line only if more than one tab
set showtabline=multitab
" fewer items in completion list
set maxitems=10
" turn off the damn bell
set visualbell
hi Bell display: none;
" ** Dark theme toggle
command -d "Return regular colors" sunon
  \ set! browser.display.foreground_color=#000000
  \ set! browser.display.background_color=#ffffff
  \ set! browser.anchor_color=#0000ee
  \ set! browser.visited_color=#551a8b
command -d "Use dark colours to save eyes" sunoff
  \ set! browser.display.foreground_color=#839496
  \ set! browser.display.background_color=#002b36
  \ set! browser.anchor_color=#b58900
  \ set! browser.visited_color=#859900

" * Behavior
" ** General
loadplugins '\.(css|js|penta)$'
group user
cd ~
set scroll=5
set newtab+=help,prefs
set passkeys+=improbableisland.com:abcdefghijklmnopqrstuvwxyz0123456789!
set hintkeys=asdfghjkl;
" use insert mode for editing text areas
set insertmode
" match accented characters with unaccented equivalents
set hintmatching+=transliterated
" ** User Commands
command -d 'Search mp3 with ddg' -nargs=+ mus open ddg mp3 <args>
" ** Mappings
" *** Common commands
map -m command,insert -b jk <Esc>
nmap -b U :undo<Space>
nmap -b s :stop<CR>
nmap -b ,u :set usermode!
" **** Consistency with Emacs setup
nmap -b q d
nmap -b Q q
nmap -b <Space> :
" **** GUI toggles
nmap -b ,t :set guioptions!=T<CR>
nmap -b ,Tn :set showtabline=never
nmap -b ,Tm :set showtabline=multitab
" **** Open hints in new tab by default
nmap -b F f
nmap -b f F
" **** h and l to move tabs
nmap -b h gT
nmap -b l gt
" **** copy selected text by default
nmap -b y Y
nmap -b Y y
" *** disabled keybinds
map -b <nop> gh
unmap gh
