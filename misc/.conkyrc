alignment top_right
gap_y 10
double_buffer yes
own_window yes
own_window_type desktop
own_window_transparent yes
own_window_argb_visual yes
draw_shades no
default_bar_size 150 2

use_xft yes
xftfont Hallo:size=8:weight=light

TEXT
$font$alignr${time %D %l:%M %p}
${font Hallo:size=20:weight=light}$alignr${voffset -5}It's-a ${time %A}.
$font





















${font Hallo:size=10:weight=light}$alignr${wireless_essid wlan0}
${voffset -5}$font$alignr${addr wlan0}
$alignr$downspeed

${alignr}CPU: $cpu%
$font





















${if_running banshee}${font Hallo:size=10:weight=light}$alignr${exec banshee --query-title | cut -c 7-}
$alignr${voffset -5}${execbar echo "scale=3;$(banshee --query-position | cut -c 11-)/$(banshee --query-duration | cut -c 10-)*100" | bc}
$font$alignr${voffset -10}${exec banshee --query-artist | cut -c 8-}
$endif
