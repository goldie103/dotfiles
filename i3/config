# -*- sh -*-
#!/bin/sh
# windows key modifier
set $m Mod4

# proper vim keys
set $up k
set $down j
set $left h
set $right l

# window title font
font pango:monospace 8

# mouse+$m to move floating windows
floating_modifier $m

# start a terminal
bindsym $m+grave exec i3-sensible-terminal

# audio
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle

# kill focused window
bindsym $m+Shift+q kill
bindsym $m+d kill

# start program launcher
bindsym $m+Return exec rofi -show drun

# change focus
bindsym $m+$left focus left
bindsym $m+$down focus down
bindsym $m+$up focus up
bindsym $m+$right focus right

# move focused window
bindsym $m+Left move left
bindsym $m+Down move down
bindsym $m+Up move up
bindsym $m+Right move right

# enter fullscreen mode for the focused container
bindsym $m+f fullscreen toggle
bindsym f11 fullscreen toggle

# layout
bindsym $m+equal split v
bindsym $m+Shift+equal split h
bindsym $m+Control+equal layout toggle split
bindsym $m+minus layout stacking
bindsym $m+Shift+minus layout tabbed

# toggle tiling / floating
bindsym $m+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $m+space focus mode_toggle

# focus the parent container
bindsym $m+p focus parent
# focus the child container
#bindsym $m+Shift+p focus child

# switch to workspace
bindsym $m+Shift+w workspace w
bindsym $m+1 workspace number 1
bindsym $m+2 workspace number 2
bindsym $m+3 workspace number 3
bindsym $m+4 workspace number 4
bindsym $m+5 workspace number 5
bindsym $m+6 workspace number 6
bindsym $m+7 workspace number 7
bindsym $m+8 workspace number 8
bindsym $m+9 workspace number 9
bindsym $m+0 workspace number 10
# move focused container to workspace
bindsym $m+Shift+1 move container to workspace 1
bindsym $m+Shift+2 move container to workspace 2
bindsym $m+Shift+3 move container to workspace 3
bindsym $m+Shift+4 move container to workspace 4
bindsym $m+Shift+5 move container to workspace 5
bindsym $m+Shift+6 move container to workspace 6
bindsym $m+Shift+7 move container to workspace 7
bindsym $m+Shift+8 move container to workspace 8
bindsym $m+Shift+9 move container to workspace 9
bindsym $m+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $m+Shift+Escape reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $m+Control+Escape restart
# exit i3 (logs you out of your X session)
bindsym $m+Shift+Control+Escape exec "i3-nagbar -t warning -m 'Do you want to exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
	bindsym $left resize shrink width 10 px or 10 ppt
	bindsym $down resize grow height 10 px or 10 ppt
	bindsym $up resize shrink height 10 px or 10 ppt
	bindsym $right resize grow width 10 px or 10 ppt
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt
	bindsym $m+r mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $m+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	i3bar_command i3bar -t
	status_command py3status -c $XDG_CONFIG_HOME/i3/i3status -i $XDG_CONFIG_HOME/i3/py3status
	position top

	font pango:ProggyCleanTTSZ, Icons

	colors {
		background	#282828cc
		statusline	#a89984
		separator		#3c3836
    
		# Type							border	bg			font
		focused_workspace		#665c54	#665c54	#a89984
		active_workspace		#3c3836	#3c3836	#a89984
		inactive_workspace	#3c3836	#3c3836	#a89984
		urgent_workspace		#3c3836	#3c3836	#a89984
		binding_mode				#3c3836	#3c3836	#a89984
	}
}


# Appearance
for_window [class="^.*"] border pixel 0
gaps inner 12
gaps outer 4

# wallpaper
exec --no-startup-id feh --bg-fill $HOME/pic/wall/wall --no-fehbg
# compositor whee
exec compton -b --config $XDG_CONFIG_HOME/compton/config.conf
