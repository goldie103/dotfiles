# -*- sh -*-
#!/bin/sh
set $m Mod4
set $default_gap 10
# workspaces
set $web 1:www
set $term 2:term
set $game 3:game

# proper vim keys
set $up k
set $down j
set $left h
set $right l

# window title font
font pango:monospace 8

# Appearance
for_window [class="^.*"] border pixel 0
gaps inner $default_gap
smart_gaps on

bindsym $m+Tab gaps inner all set 0
bindsym $m+Shift+Tab gaps inner all set $default_gap

# wallpaper
exec --no-startup-id feh --bg-fill $HOME/pic/wall/wall --no-fehbg
# compositor
#exec --no-startup-id compton -b --config $XDG_CONFIG_HOME/compton/config.conf

# screenshot
bindsym --release Print exec --no-startup-id import ~/pic/ss.png
bindsym --release $m+Print exec --no-startup-id import -window root ~/pic/ss.png
# start a terminal
bindsym $m+grave exec i3-sensible-terminal
# audio
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle
# start program launcher
bindsym $m+Return exec rofi -show combi

# mouse+$m to move floating windows
floating_modifier $m

# kill focused window
bindsym $m+d kill

# change focus
bindsym $m+$left focus left
bindsym $m+$down focus down
bindsym $m+$up focus up
bindsym $m+$right focus right

# move focused window
bindsym $m+Left move left
bindsym $m+Down move down
bindsym $m+Up move up
bindsym $m+Right move right

# enter fullscreen mode for the focused container

# layout
bindsym $m+equal split v
bindsym $m+Shift+equal split h
bindsym $m+minus layout toggle split
bindsym $m+Shift+minus layout toggle all
bindsym $m+space floating toggle
bindsym $m+Control+space focus mode_toggle
bindsym $m+Shift+space sticky toggle
bindsym f11 fullscreen toggle

bindsym $m+p focus parent
#bindsym $m+Shift+p focus child

# switch to workspace
bindsym $m+1 workspace number $web
bindsym $m+2 workspace number $term
bindsym $m+3 workspace number $game
bindsym $m+4 workspace number 4
bindsym $m+5 workspace number 5
bindsym $m+6 workspace number 6
bindsym $m+7 workspace number 7
bindsym $m+8 workspace number 8
bindsym $m+9 workspace number 9
bindsym $m+0 workspace number 10
# move focused container to workspace
bindsym $m+Shift+1 move container to workspace number $web
bindsym $m+Shift+2 move container to workspace number $term
bindsym $m+Shift+3 move container to workspace number $game
bindsym $m+Shift+4 move container to workspace number 4
bindsym $m+Shift+5 move container to workspace number 5
bindsym $m+Shift+6 move container to workspace number 6
bindsym $m+Shift+7 move container to workspace number 7
bindsym $m+Shift+8 move container to workspace number 8
bindsym $m+Shift+9 move container to workspace number 9
bindsym $m+Shift+0 move container to workspace number 10

# assigned clients
assign [class="Firefox"] $web
assign [class="Steam"] $game

workspace $term gaps inner 0
workspace $game gaps inner 0

# reload the configuration file
bindsym $m+Shift+Escape reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $m+Control+Escape restart
# exit i3 (logs you out of your X session)
bindsym $m+Shift+Control+Escape exec "i3-nagbar -t warning -m 'Do you want to exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
	bindsym $left resize shrink width 10 px or 10 ppt
	bindsym $down resize grow height 10 px or 10 ppt
	bindsym $up resize shrink height 10 px or 10 ppt
	bindsym $right resize grow width 10 px or 10 ppt
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt
	bindsym $m+r mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $m+r mode "resize"

bar {
	i3bar_command i3bar
	#status_command i3status
	status_command py3status -c $XDG_CONFIG_HOME/i3/i3status -i $XDG_CONFIG_HOME/i3/py3status
	position top
    strip_workspace_numbers yes

	font pango:Lemon 8

	colors {
		background	#282828
		statusline	#a89984
		separator	#282828

		# Type					border	bg		font
		focused_workspace		#665c54	#665c54	#a89984
		active_workspace		#3c3836	#3c3836	#a89984
		inactive_workspace		#3c3836	#3c3836	#a89984
		urgent_workspace		#3c3836	#3c3836	#a89984
		binding_mode			#3c3836	#3c3836	#a89984
	}
}


