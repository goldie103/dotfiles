# -*-mode:shell-script-*-
xinput disable 11                                # disable touchscreen

# Key mappings
options[0]="terminate:ctrl_alt_bksp"              # ctrl+alt+bksp restarts xorg
options[1]="caps:ctrl_modifier ctrl:nocaps"       # caps lock to ctrl
# apply each option if not already applied
for option in $options; do
  [[ $(setxkbmap -query | grep $option) ]] || setxkbmap -option $option
done

# Wacom tablet mappings
tablet="Wacom Intuos PT S Finger pad"
xsetwacom set $tablet Button 3 "key ctrl z"       # top-left undo
#xsetwacom set $tablet Button 9 ""                 # top-right
#xsetwacom set $tablet Button 1 ""                 # bottom-left
#xsetwacom set $tablet Button 8 ""                 # bottom-right
